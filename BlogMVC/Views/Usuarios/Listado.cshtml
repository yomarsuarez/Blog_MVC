@model UsuariosListadoViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Users List";
}

<h1>Users</h1>

@if(Model.Mensaje is not null)
{
    <div class="alert alert-success">@Model.Mensaje</div>
}

@if(Model.Usuarios is not null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Action</td>
                <td>Email</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var usuario in Model.Usuarios)
            {
                <tr>
                    <td>
                        <a class="btn btn-primary me-2" asp-action="RolesUsuario" asp-route-usuarioId="@usuario.Id">Edit Roles</a>
                    </td>
                    <td>@usuario.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found</p>
}