@model EntradasConComentariosNegativosViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Post with Negative Comments";
}


<h2>Post with Negative Comments</h2>

@if (Model.Entradas.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Number of comments </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var entrada in Model.Entradas)
            {
                <tr>
                    <td>@entrada.Titulo</td> 
                    <td>@entrada.CantidadComentariosNegativos</td>
                    <td><a class="btn btn-primary" asp-action="Detalle" asp-route-id="@entrada.Id">View Post</a></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <p>No post with negative messages.</p>
}
